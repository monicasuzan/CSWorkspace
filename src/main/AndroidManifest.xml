<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.myadmin">
    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:node="remove" />
    <uses-permission
        android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:node="remove" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyAdmin"
        tools:targetApi="31">
        <activity
            android:name=".ViewAchieversActivity"
            android:exported="false" />
        <activity
            android:name=".AddAchievementActivity"
            android:exported="false" /> <!-- FileProvider for opening files -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.myadmin.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <activity
            android:name=".UploadActivity"
            android:exported="true" />
        <activity
            android:name=".AdminActivity"
            android:exported="true"
            android:label="@string/admin_activity_label"
            android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar" />
        <activity
            android:name=".DeleteUserActivity"
            android:exported="true"
            android:label="@string/delete_user_label"
            android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar" />
        <activity
            android:name=".ViewUsersActivity"
            android:exported="true"
            android:label="@string/view_users_label"
            android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar" />
        <activity
            android:name=".ChangePasswordActivity"
            android:exported="false" />
        <activity
            android:name=".HomeActivity"
            android:exported="true"
            android:label="@string/home_activity_label"
            android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar" />
        <activity
            android:name=".UserPasswordChangeActivity"
            android:exported="false" />
        <activity
            android:name=".EmailDetailActivity"
            android:exported="false" />
        <activity
            android:name=".TrashActivity"
            android:exported="false" />
        <activity
            android:name=".SentEmailActivity"
            android:exported="false" />
        <activity
            android:name=".InboxActivity"
            android:exported="false" />
        <activity
            android:name=".ComposeEmailActivity"
            android:exported="true" /> <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>